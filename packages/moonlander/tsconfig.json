{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false, // Sorry
    "strict": false, // Apologies
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../bitbobs"
    }
  ],
  "include": ["src"]
}

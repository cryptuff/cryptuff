{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./typings", "node_modules/@types", "../../node_modules/@types"],
    "paths": {
      "*": ["./typings/*"]
    },
    "lib": ["esnext"],
    "module": "commonjs"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    
    "paths": {
      "@components/*": [ "src/components/*" ],
      "@helpers/*": [ "src/helpers/*" ],
      "@cryptuff/*": ["../*"],
      "@core": ["../core"]
    },
  },
  "references": [{ "path": "../core" }],
  "include": ["./typings/*", "./src/**/*.ts", "./src/**/*.tsx"]
}

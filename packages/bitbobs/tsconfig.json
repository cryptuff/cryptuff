{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",

    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "paths": {
      "@components/*": ["src/components/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["./typings/*", "./src/**/*.ts", "./src/**/*.tsx"]
}

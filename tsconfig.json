{
  "compilerOptions": {
    "baseUrl": ".",

    "sourceMap": true,
    // "declarationMap": true,

    "module": "commonjs",
    // "moduleResolution": "node",
    "target": "es2016",
    "lib": ["dom", "esnext"],

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "pretty": true,

    "composite": true,

    "paths": {
      "@cryptuff/*": ["packages/*"],
      "core": ["packages/core"]
    }
  },
  // "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"],
  "references": [{ "path": "packages/core" }, { "path": "packages/pds" }]
  //   "compileOnSave": true,
}

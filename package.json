{
  "name": "cryptuff",
  "version": "0.1.0",
  "description": "Monorepo for cryptuff packages",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.0",
    "typescript": "^3.2.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean -y",
    "lint": "tslint --fix --project ./packages/tsconfig.lint.json",
    "test": "lerna run test",
    "watch": "tsc -w -b ./packages"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "yarn run lint",
      "git add"
    ]
  }
}

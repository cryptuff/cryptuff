{
  "name": "cryptuff",
  "version": "0.1.0",
  "description": "Monorepo for cryptuff packages",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.10.6",
    "lint-staged": "^8.1.0",
    "typescript": "^3.2.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages/core packages/pds",
    "test": "lerna run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
